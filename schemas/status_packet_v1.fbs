table StatusPacketV1 {
    timestamp: GpsTime;
    period_number: uint64;
    protons_per_pulse: uint8;
    running: bool;
    frame_number: uint32;
}

// GPS timestamp in UTC
struct GpsTime {
    year: uint8;  // Years since 2000 (i.e. 22 = 2022)
    day: uint16;  // Day of year (1-366)

    hour: uint8;
    minute: uint8;
    second: uint8;

    millisecond: uint16;
    microsecond: uint16;
    nanosecond: uint16;
}
